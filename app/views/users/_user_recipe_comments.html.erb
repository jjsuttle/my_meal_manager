<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Recipe Comments

    <a data-toggle="collapse" href="#user_recipe_comments_new_form">
      Add recipe review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.recipe_comments.each do |recipe_review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to recipe_review, recipe_review %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_recipe_comments_new_form">
        <%= render partial: "users/user_recipe_comments_new_form" %>
      </div>
    </div>

  </ul>
</div>
