<% was_validated = grocery_list_item.errors.any? %>

<%= form_with(model: grocery_list_item, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% food_class = "form-control" %>
    <% food_was_invalid = grocery_list_item.errors.include?(:food) %>

    <% if was_validated %>
      <% if food_was_invalid %>
        <% food_class << " is-invalid" %>
      <% else %>
        <% food_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :food_id %>
    <%= f.number_field :food_id, class: food_class, placeholder: "Enter food" %>
    <% if food_was_invalid %>
      <% grocery_list_item.errors.full_messages_for(:food).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% purchased_status_class = "form-control" %>
    <% purchased_status_was_invalid = grocery_list_item.errors.include?(:purchased_status) %>

    <% if was_validated %>
      <% if purchased_status_was_invalid %>
        <% purchased_status_class << " is-invalid" %>
      <% else %>
        <% purchased_status_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :purchased_status %>
    <%= f.select :purchased_status, options_for_select(GroceryListItem.purchased_statuses.keys), {}, class: "form-control" %>
    <% if purchased_status_was_invalid %>
      <% grocery_list_item.errors.full_messages_for(:purchased_status).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% food_item_class = "form-control" %>
    <% food_item_was_invalid = grocery_list_item.errors.include?(:food_item) %>

    <% if was_validated %>
      <% if food_item_was_invalid %>
        <% food_item_class << " is-invalid" %>
      <% else %>
        <% food_item_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :food_item %>
    <%= f.text_field :food_item, class: food_item_class, placeholder: "Enter food item" %>
    <% if food_item_was_invalid %>
      <% grocery_list_item.errors.full_messages_for(:food_item).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% note_class = "form-control" %>
    <% note_was_invalid = grocery_list_item.errors.include?(:note) %>

    <% if was_validated %>
      <% if note_was_invalid %>
        <% note_class << " is-invalid" %>
      <% else %>
        <% note_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :note %>
    <%= f.text_field :note, class: note_class, placeholder: "Enter note" %>
    <% if note_was_invalid %>
      <% grocery_list_item.errors.full_messages_for(:note).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
