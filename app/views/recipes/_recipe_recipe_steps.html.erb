<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Recipe Steps

    <a data-toggle="collapse" href="#recipe_recipe_steps_new_form">
      Add recipe step
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @recipe.recipe_steps.each do |recipe_step| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to recipe_step, recipe_step %>

        <%= link_to recipe_step, method: :delete, data: { confirm: "Do you really want to delete this recipe_step" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="recipe_recipe_steps_new_form">
        <%= render partial: "recipes/recipe_recipe_steps_new_form" %>
      </div>
    </div>

  </ul>
</div>
