<% was_validated = recipe.errors.any? %>

<%= form_with(model: recipe, local: true, novalidate: true, class: "mb-3") do |f| %>
  <!-- Label and input for recipe_name start -->
  <div class="form-group">
    <% recipe_name_class = "form-control" %>
    <% recipe_name_was_invalid = recipe.errors.include?(:recipe_name) %>

    <% if was_validated %>
      <% if recipe_name_was_invalid %>
        <% recipe_name_class << " is-invalid" %>
      <% else %>
        <% recipe_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :recipe_name %>
    <!-- Input for recipe_name start -->
    <%= f.text_field :recipe_name, class: recipe_name_class, placeholder: "Enter recipe name" %>
    <!-- Input for recipe_name end -->
    <% if recipe_name_was_invalid %>
      <% recipe.errors.full_messages_for(:recipe_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for recipe_name end -->
  <!-- Label and input for servings start -->
  <div class="form-group">
    <% serving_class = "form-control" %>
    <% serving_was_invalid = recipe.errors.include?(:serving) %>

    <% if was_validated %>
      <% if serving_was_invalid %>
        <% serving_class << " is-invalid" %>
      <% else %>
        <% serving_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :servings %>
    <!-- Input for servings start -->
    <%= f.number_field :servings, class: serving_class, placeholder: "Enter serving" %>
    <!-- Input for servings end -->
    <% if serving_was_invalid %>
      <% recipe.errors.full_messages_for(:serving).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for servings end -->
  <!-- Label and input for cooking_time start -->
  <div class="form-group">
    <% cooking_time_class = "form-control" %>
    <% cooking_time_was_invalid = recipe.errors.include?(:cooking_time) %>

    <% if was_validated %>
      <% if cooking_time_was_invalid %>
        <% cooking_time_class << " is-invalid" %>
      <% else %>
        <% cooking_time_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :cooking_time %>
    <!-- Input for cooking_time start -->
    <%= f.number_field :cooking_time, class: cooking_time_class, placeholder: "Enter cooking time" %>
    <!-- Input for cooking_time end -->
    <% if cooking_time_was_invalid %>
      <% recipe.errors.full_messages_for(:cooking_time).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <!-- Label and input for cooking_time end -->
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
